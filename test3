local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Fluent " .. Fluent.Version,
    SubTitle = "by dawid",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true, -- The blur may be detectable, setting this to false disables blur entirely
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl -- Used when theres no MinimizeKeybind
})

local Tabs = {
    Main = Window:AddTab({ Title = "Auto Farm", Icon = "" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

local Toggle = Tabs.Main:AddToggle("Auto equip", {Title = "Toggle", Default = false })

Toggle:OnChanged(function(v)
    _G.Auto_Equip = v
     while _G.Auto_Equip do wait()
        pcall(function()
            local weapon = "None"
            game.Players.LocalPlayer.Character.Humanoid:EquipTool(game:GetService("Players").fameshop0828.Backpack:FindFirstChild(weapon))
        end)
    end
end)

Options.MyToggle:SetValue(false)



local Toggle = Tabs.Main:AddToggle("Auto Hit", {Title = "Toggle", Default = false })

Toggle:OnChanged(function(v)
    _G.Autohit = v
    while _G.Autohit do wait()
        game:GetService'VirtualUser':CaptureController()
        game:GetService'VirtualUser':Button1Down(Vector2.new(483,343))
    end
end)

Options.MyToggle:SetValue(false)
    
    
local Toggle = Tabs.Main:AddToggle("Auto Farm boss", {Title = "Toggle", Default = false })

Toggle:OnChanged(function(v)
    _G.AutoFarm_boss = v
    while _G.AutoFarm_boss do wait()
        local warp = game.Players.LocalPlayer.Character.HumanoidRootPart
        for i,v in pairs(game:GetService("Workspace").Monster.Boss:GetDescendants()) do
            if v.ClassName == "Model" then
                    warp.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0,0,3)
            end
        end
    end
end)

Options.MyToggle:SetValue(false)
