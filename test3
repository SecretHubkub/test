local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Secret Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "Secrethub"})
local Tab = Window:MakeTab({
	Name = "Zone1",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})
local Section = Tab:AddSection({
	Name = "Auto Farm"
})

Tab:AddToggle({
	Name = "Auto Training",
	Default = false,
	Callback = function(Value)
		_G.Autotrain = Value
        while _G.Autotrain do
            wait()
            game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("ToolService"):WaitForChild("RE"):WaitForChild("onClick"):FireServer()
        end
	end    
})

local NPCw1 = {}
local NPC = nil
for i,v in pairs(game:GetService("Workspace").GameObjects.ArmWrestling["1"].NPC:GetChildren()) do -- ทำdropdown
    table.insert(NPCw1,v.Name)
end

Tab:AddDropdown({
	Name = "Select NPC",
	Default = "1",
	Options = NPCw1,
	Callback = function(Value)
		NPC = Value
	end    
})

Tab:AddToggle({
	Name = "Auto Fight",
	Default = false,
	Callback = function(Value)
		_G. Autofight = Value

    if NPC == "Bully" then
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("ArmWrestleService"):WaitForChild("RE"):WaitForChild("onClickRequest"):FireServer()

        local args = {
            [1] = "Bully",
            [2] = workspace:WaitForChild("GameObjects"):WaitForChild("ArmWrestling"):WaitForChild("1"):WaitForChild("NPC"):WaitForChild("Bully"):WaitForChild("Table"),
